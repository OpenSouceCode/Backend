{
  "env": {
    "browser": false,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "extends": ["plugin:prettier/recommended", "airbnb-base"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "implicit-arrow-linebreak": "warn",
    "no-async-promise-executor": "warn"
  }
}
